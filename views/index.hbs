<div class="bann">
    <div class="content">
        <h1 class="mb-5">For your roofing and siding, <br>weâ€™re the ones worth relying..</h1>
        <a href="/services">Explore Us <i class="bi bi-arrow-right"></i></a>
    </div>
    
</div>

     


 {{!-- intro-------------------------------------------------------------------------------------------------------- --}}
      
<section class="intro background1 py-5">

  <div class="container text-center">
    <div class="row">
      {{#each intro}}
      <div class="col-md-12">
        <h1>{{this.title}}</h1>
        <p>{{this.description}}</p>
       <a class="btn btn-primary" href="{{this.link}}">{{this.linkText}}</a>
      </div>
      {{/each}}
    </div>
  </div>

</section>


{{!-- ----services section ------------------------------------------------------------------------------------}}


       <section id="services_section" class="py-4 ">
       <div class="container">

         <h1 class="text-center text-success">Services that we provides</h1>

        <div class="row mt-3">
         {{#each services}}
         <div class="col-md-3 ">

          <div class="card ">

            <div class="card-body  text-center ">
              <div class="box">
              <div class="container text-center">
              <i class="{{this.icon}} service-icon"></i>
              </div>
              <h3 class="card-title">{{this.title}}</h3>
              <p>{{this.description}}</p>
              <a class="btn btn-primary" href="{{this.link}}">{{this.linkText}}</a>
              </div>
            </div>
            
          </div>
              
         </div>
         {{/each}}
        </div>
       </div>

       </section>

  {{!-- -----project gallery----- ------------------------------------------------------------------------------}}


{{!-- {{>prj data4=gallery}} --}}


<section class="proj">
  <div class="container">
    
     <h1 class=" text-center text-success">Our Projects</h1>
    
    <div class="row mt-4">
      {{#each proj.links}}
      <div class="col-lg-3 ">
        <div class="projbox mt-3 mb-3">
         <img src="{{this.url}}" >
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>


{{!-- ----------Contact us section -----------------------------------------------------------------------------------------------}}



   <section id="contact_us" class="py-5 mt-4 background2">
     
    <div class="container">
      
     
      <div class="row">
 
      <div class="col-lg-6   ">
        
      <h3 class=" text-primary ">Owner</h3>
      <div class="row ">
       {{#each owner}}
        
          <div class="col-md-6 "> 
          
     
          <div class="card ">

            <div class="card-body  text-center ">
              <div class="container text-center">
               <img src="{{this.img}}" class="card-img-top" alt="...">
              </div>
              <h3 class="card-title">{{this.title}}</h3>
              <p>{{this.description}}</p>
              
            </div>
            
          </div>
               </div> 
         
         {{/each}}
     </div>
      </div>

 

       <div class="col-lg-6 owner"> 
        <h3 class="  text-primary">Contact Us</h3>
            <form action="/contact-form" method="post">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Email address</label>
    <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>

  <div class="mb-3">
    <label for="contactnumberfield" class="form-label">Contact Number</label>
    <input name="phone" type="number" class="form-control" id="contactnumberfield">
  </div>

  <div class="form-floating my-2">
  <textarea name="msg" style="height: 250px;" class="form-control" placeholder="Leave Message Here" id="msgfield"></textarea>
  <label for="msgfield">Message</label>
</div>

  <div class="container text-center">
     <button type="submit" class="btn btn-dark">Submit</button>
  </div>
 
</form>
      </div>
       
     </div> 
     </div>
   </section>
